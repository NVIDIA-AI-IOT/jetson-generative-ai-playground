---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get featured community projects
const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter(p => p.data.featured)
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

const sourceColors: Record<string, { bg: string; text: string }> = {
  'GitHub': { bg: 'bg-gray-800', text: 'text-white' },
  'Hackster': { bg: 'bg-orange-500', text: 'text-white' },
  'YouTube': { bg: 'bg-red-600', text: 'text-white' },
  'NVIDIA': { bg: 'bg-nvidia-green', text: 'text-nvidia-black' },
  'JetsonHacks': { bg: 'bg-blue-600', text: 'text-white' },
  'Seeed': { bg: 'bg-green-600', text: 'text-white' },
  'Other': { bg: 'bg-gray-500', text: 'text-white' },
};
---



<Layout title="Jetson AI Lab">
  <section class="bg-nvidia-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 flex flex-col lg:flex-row items-center justify-between gap-8">
      <div class="flex-1 text-center lg:text-left">
        <h1 class="text-4xl md:text-5xl font-nvidia font-bold mb-6 leading-tight">
          Generative AI at the Edge
        </h1>
        <p class="text-lg md:text-xl text-nvidia-dark mb-10 font-nvidia">
          Bring generative AI to the world with NVIDIA<sup class='align-super text-xs'>®</sup> Jetson™
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a href="/tutorials" class="bg-nvidia-green text-nvidia-black px-8 py-3 rounded-md font-bold text-base shadow hover:bg-nvidia-green/90 transition-all duration-200">
            Explore Tutorials
          </a>
          <a href="https://discord.gg/nvidia-jetson" target="_blank" rel="noopener" class="border-2 border-nvidia-green text-nvidia-black px-8 py-3 rounded-md font-bold text-base flex items-center gap-2 hover:bg-nvidia-green/10 transition-all duration-200">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.317 4.369a19.791 19.791 0 00-4.885-1.515.07.07 0 00-.073.035c-.211.375-.444.864-.608 1.249-1.844-.276-3.68-.276-5.486 0-.163-.393-.405-.874-.617-1.249a.07.07 0 00-.073-.035c-1.67.285-3.29.822-4.885 1.515a.064.064 0 00-.03.027C.533 9.045-.32 13.579.099 18.057a.07.07 0 00.028.048c2.052 1.507 4.042 2.422 5.992 3.029a.07.07 0 00.076-.027c.461-.63.873-1.295 1.226-1.994a.07.07 0 00-.038-.098c-.652-.247-1.27-.549-1.872-.892a.07.07 0 01-.007-.117c.126-.094.252-.192.372-.291a.07.07 0 01.071-.01c3.927 1.793 8.18 1.793 12.061 0a.07.07 0 01.072.009c.12.099.246.198.372.292a.07.07 0 01-.006.117 12.298 12.298 0 01-1.873.891.07.07 0 00-.038.099c.36.698.772 1.362 1.225 1.993a.07.07 0 00.076.028c1.95-.607 3.94-1.522 5.993-3.029a.07.07 0 00.028-.048c.5-5.177-.838-9.673-3.548-13.661a.061.061 0 00-.03-.028zM8.02 15.331c-1.183 0-2.156-1.085-2.156-2.419 0-1.333.955-2.418 2.156-2.418 1.21 0 2.175 1.095 2.156 2.418 0 1.334-.955 2.419-2.156 2.419zm7.974 0c-1.183 0-2.156-1.085-2.156-2.419 0-1.333.955-2.418 2.156-2.418 1.21 0 2.175 1.095 2.156 2.418 0 1.334-.946 2.419-2.156 2.419z"/></svg>
            Discord
          </a>
        </div>
      </div>
      <div class="flex-1 flex justify-center lg:justify-end">
        <img src="/images/hero/jetson-family-line_50pcnt.png" alt="NVIDIA Jetson AI Illustration" class="max-w-[192px] md:max-w-[640px] w-auto h-auto" />
      </div>
    </div>
  </section>

  <!-- Explore Section -->
  <section class="py-20 bg-nvidia-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Models Card -->
        <a href="/models" class="group bg-nvidia-gray-50 rounded-xl p-8 border border-nvidia-gray-200 hover:border-nvidia-green/50 hover:shadow-lg transition-all duration-300 relative overflow-hidden">
          <div class="absolute top-0 right-0 w-32 h-32 bg-nvidia-green/5 rounded-full -translate-y-1/2 translate-x-1/2"></div>
          <div class="relative">
            <div class="w-14 h-14 bg-nvidia-green/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-nvidia-green/20 transition-colors">
              <svg class="w-7 h-7 text-nvidia-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-nvidia-black mb-3 group-hover:text-nvidia-green transition-colors">Explore Models</h3>
            <p class="text-nvidia-gray-600 mb-6 text-lg leading-relaxed">
              Discover LLMs, VLMs, and diffusion models optimized and ready to run on Jetson devices.
            </p>
            <span class="inline-flex items-center text-nvidia-green font-semibold group-hover:gap-3 gap-2 transition-all">
              Browse all models
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </span>
          </div>
        </a>

        <!-- Tutorials Card -->
        <a href="/tutorials" class="group bg-nvidia-gray-50 rounded-xl p-8 border border-nvidia-gray-200 hover:border-nvidia-green/50 hover:shadow-lg transition-all duration-300 relative overflow-hidden">
          <div class="absolute top-0 right-0 w-32 h-32 bg-nvidia-green/5 rounded-full -translate-y-1/2 translate-x-1/2"></div>
          <div class="relative">
            <div class="w-14 h-14 bg-nvidia-green/10 rounded-xl flex items-center justify-center mb-6 group-hover:bg-nvidia-green/20 transition-colors">
              <svg class="w-7 h-7 text-nvidia-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-nvidia-black mb-3 group-hover:text-nvidia-green transition-colors">Explore Tutorials</h3>
            <p class="text-nvidia-gray-600 mb-6 text-lg leading-relaxed">
              Step-by-step guides for deploying and running generative AI on your Jetson.
            </p>
            <span class="inline-flex items-center text-nvidia-green font-semibold group-hover:gap-3 gap-2 transition-all">
              Browse all tutorials
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </span>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Tutorial Categories -->
  <section class="py-20 bg-nvidia-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-nvidia-black mb-4">Quick Access</h2>
        <p class="text-xl text-nvidia-gray-600">Jump straight to what you need</p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Setup -->
        <a href="/tutorials#section-setup" class="group bg-nvidia-white rounded-xl p-6 border border-nvidia-gray-200 hover:border-nvidia-green hover:shadow-md transition-all duration-200">
          <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-nvidia-black mb-2 group-hover:text-nvidia-green transition-colors">Setup Guides</h3>
          <p class="text-nvidia-gray-600 text-sm">Initial setup, SSD configuration, and getting started</p>
        </a>

        <!-- Fundamentals/LLMs -->
        <a href="/tutorials#section-fundamentals" class="group bg-nvidia-white rounded-xl p-6 border border-nvidia-gray-200 hover:border-nvidia-green hover:shadow-md transition-all duration-200">
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-nvidia-black mb-2 group-hover:text-nvidia-green transition-colors">Text & LLMs</h3>
          <p class="text-nvidia-gray-600 text-sm">Large language models and text generation</p>
        </a>

        <!-- Multimodal/Vision -->
        <a href="/tutorials#section-multimodal" class="group bg-nvidia-white rounded-xl p-6 border border-nvidia-gray-200 hover:border-nvidia-green hover:shadow-md transition-all duration-200">
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-nvidia-black mb-2 group-hover:text-nvidia-green transition-colors">Vision & Multimodal</h3>
          <p class="text-nvidia-gray-600 text-sm">VLMs and vision-language models</p>
        </a>

        <!-- Workshops -->
        <a href="/tutorials#section-workshops" class="group bg-nvidia-white rounded-xl p-6 border border-nvidia-gray-200 hover:border-nvidia-green hover:shadow-md transition-all duration-200">
          <div class="w-12 h-12 bg-nvidia-green/10 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-nvidia-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-nvidia-black mb-2 group-hover:text-nvidia-green transition-colors">Workshops</h3>
          <p class="text-nvidia-gray-600 text-sm">Hands-on workshops and deep dives</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Community Projects Section -->
  <section class="py-20 bg-nvidia-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between mb-12">
        <div>
          <h2 class="text-3xl font-bold text-nvidia-black mb-2">Community Projects</h2>
          <p class="text-lg text-nvidia-gray-600">See what the community is building with Jetson</p>
        </div>
        <a href="/community" class="hidden sm:inline-flex items-center gap-2 text-nvidia-green font-semibold hover:gap-3 transition-all">
          View all projects
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {featuredProjects.map((project) => {
          const colors = sourceColors[project.data.source] || sourceColors['Other'];
          return (
            <a href={project.data.link} target="_blank" rel="noopener" class="group bg-nvidia-gray-50 rounded-xl overflow-hidden border border-nvidia-gray-200 hover:border-nvidia-green/50 hover:shadow-lg transition-all duration-300">
              {/* Media */}
              <div class="relative aspect-video bg-nvidia-gray-100 overflow-hidden">
                {project.data.video ? (
                  <iframe
                    src={project.data.video}
                    class="w-full h-full"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen
                    loading="lazy"
                  ></iframe>
                ) : project.data.image ? (
                  <img
                    src={project.data.image}
                    alt={project.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-nvidia-gray-100 to-nvidia-gray-200">
                    <svg class="w-16 h-16 text-nvidia-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                )}

                {/* Source Badge */}
                <span class={`absolute top-3 left-3 px-2 py-1 text-xs font-bold rounded ${colors.bg} ${colors.text}`}>
                  {project.data.source}
                </span>
              </div>

              {/* Content */}
              <div class="p-5">
                <div class="flex items-center justify-between mb-2">
                  <span class="text-sm text-nvidia-gray-500">{project.data.author}</span>
                </div>

                <h3 class="text-lg font-bold text-nvidia-black mb-2 group-hover:text-nvidia-green transition-colors line-clamp-2">
                  {project.data.title}
                </h3>

                <p class="text-nvidia-gray-600 text-sm line-clamp-2">
                  {project.data.description}
                </p>
              </div>
            </a>
          );
        })}
      </div>

      <div class="mt-8 text-center sm:hidden">
        <a href="/community" class="inline-flex items-center gap-2 text-nvidia-green font-semibold">
          View all projects
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
